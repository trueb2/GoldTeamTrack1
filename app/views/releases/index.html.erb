<p id="notice"><%= notice %></p>

<h1>Releases (<%= @count %>)</h1>

<%= will_paginate @releases %>

<table class="table-condensed">
  <thead>
    <tr>
      <th>Chemical ID</th>
      <th>Facility ID</th>
      <th>Year</th>
      <th>Quantity</th>
      <th>Units</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @releases.each do |release| %>
      <tr>
        <td><%= release.chemical_id %></td>
        <td><%= release.facility_id %></td>
        <td><%= release.year %></td>
        <td><%= release.quantity %></td>
        <td><%= release.units %></td>
        <td><%= link_to 'Show', release %></td>
        <td><%= link_to 'Edit', edit_release_path(release) %></td>
        <td><%= link_to 'Destroy', release, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Release', new_release_path %>
