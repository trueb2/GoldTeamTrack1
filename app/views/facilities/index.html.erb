<p id="notice"><%= notice %></p>

<h1>Facilities (<%= @count %>)</h1>

<form class="form-inline my-2 my-lg-0" _lpchecked="1" action="/facilities" method="get">
  <input class="form-control mr-sm-2" type="text" placeholder="Name" name="name">
  <button class="btn btn-success my-2 my-sm-0" type="submit">Search</button>
</form>

<%= will_paginate @facilities %>

<table class="table-condensed"
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>City</th>
      <th>Country</th>
      <th>State</th>
      <th>Zip</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Federally owned</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @facilities.each do |facility| %>
      <tr>
        <td><%= facility.name %></td>
        <td><%= facility.address %></td>
        <td><%= facility.city %></td>
        <td><%= facility.country %></td>
        <td><%= facility.state %></td>
        <td><%= facility.zip %></td>
        <td><%= facility.latitude %></td>
        <td><%= facility.longitude %></td>
        <td><%= facility.federally_owned %></td>
        <td><%= link_to 'Show', facility %></td>
        <td><%= link_to 'Edit', edit_facility_path(facility) %></td>
        <td><%= link_to 'Destroy', facility, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Facility', new_facility_path %>
