<% if flash[:new_event] == 1 %>

<!-- Modal template copied from https://v4-alpha.getbootstrap.com/components/modal/#live-demo -->

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Event created!</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Thank you for contributing to our database!
      </div>
      <div class="modal-footer">
      </div>
    </div>
  </div>
</div>

<script>
  $("#exampleModal").modal();
</script>

<% end %>

<div class="container-fluid">
    <div class="jumbotron">

	<h1>Map View</h1>

        <br>

        <form id="event_fields">
          Year: <input type="text" id="release_year" value="2016" /><br>
          Clear Air Act Chemicals: <input type="checkbox" id="chemical_caa" checked="true" /><br>
        </form>
        <br>
        <button class="btn btn-lg btn-primary" onclick="dropPins()" style="margin-bottom: 20px;">Search</button>

        <br>

        <div style="color: #000;">
            <div id="map" style="width: 100%; height: 800px"></div>
        </div>
    </div>
</div>

<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyADv2Y8CtCt8vg9aFPz1BowUxXLYx6YFTo&callback=initMap"></script>


<link href="https://cdnjs.cloudflare.com/ajax/libs/datatables/1.10.12/css/dataTables.bootstrap4.min.css" rel="stylesheet"/>
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap.min.js"></script>

<div style="overflow-y:scroll; max-height:1000px; max-width:80%" class="container-fluid">
  <table data-toggle="table">
    <thead>
      <tr>
        <th>Chemical</th>
        <th>Facility</th>
        <th>Year</th>
        <th>Quantity</th>
        <th>Units</th>
      </tr>
    </thead>

    <tbody id="tabel_body">

    </tbody>

  </table>
</div>

<div class="container-fluid">
  <div class="jumbotron">
    <h1 style="margin-bottom: 50px;" >Graph</h1>
    <%= render partial: "zoom_tree" %>
  </div>
</div>
