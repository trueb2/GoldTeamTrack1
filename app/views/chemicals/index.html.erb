<p id="notice"><%= notice %></p>

<h1>Chemicals (<%= @count %>)</h1>

<%= will_paginate @chemicals %>

<table class="table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Compound</th>
      <th>Clear air act chemical</th>
      <th>Is metal</th>
      <th>Metal category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chemicals.each do |chemical| %>
      <tr>
        <td><%= chemical.name %></td>
        <td><%= chemical.compound_id %></td>
        <td><%= chemical.clear_air_act_chemical %></td>
        <td><%= chemical.is_metal %></td>
        <td><%= chemical.metal_category %></td>
        <td><%= link_to 'Show', chemical %></td>
        <td><%= link_to 'Edit', edit_chemical_path(chemical) %></td>
        <td><%= link_to 'Destroy', chemical, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Chemical', new_chemical_path %>
